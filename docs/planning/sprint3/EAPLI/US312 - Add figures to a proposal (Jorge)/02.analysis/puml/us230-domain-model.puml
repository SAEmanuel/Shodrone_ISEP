@startuml

skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

title Add Figure to Proposal - Domain Model (US312)

hide circles
hide methods

package "Show Proposal Subsystem" {

    class ShowProposal {
        String: id
        Integer: totalDrones
        List<DroneModelAssignment>: droneModels
        List<FigureExecution>: figureExecutions
        ShowProposalAuthor: author
        DateTime: creationDate
    }

    class FigureExecution {
        String: id
        Figure: figure
        Integer: sequencePosition
        List<DroneTypeMapping>: droneTypeMappings
    }

    class Figure {
        String: id
        String: code
        Boolean: isActive
        Boolean: isPublic
        Customer: exclusivity
        List<DroneType>: droneTypes
    }

    class DroneTypeMapping {
        DroneType: droneType
        DroneModel: droneModel
    }

    class DroneModelAssignment {
        DroneModel: droneModel
        Integer: quantity
    }

    class DroneModel {
        String: id
        String: modelName
        String: capabilities
    }

    class DroneType {
        String: id
        String: typeName
    }

    class ShowProposalAuthor {
        String: userId
        String: username
    }

    ShowProposal "1" --> "0..*" FigureExecution : contains >
    FigureExecution "1" --> "1" Figure : refers >
    FigureExecution "1" --> "1..*" DroneTypeMapping : includes >
    DroneTypeMapping "1" --> "1" DroneType : maps >
    DroneTypeMapping "1" --> "1" DroneModel : to >
    ShowProposal "1" --> "1..*" DroneModelAssignment : assigns >
    DroneModelAssignment "1" --> "1" DroneModel : refers >
    ShowProposal "1" --> "1" ShowProposalAuthor : created by >
    Figure "1" --> "1..*" DroneType : requires >
}

@enduml