@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

title System Sequence Diagram (SSD) - Edit a Maintenance Type

autonumber

actor "Drone Tech" as DT
participant ":System" as System

activate DT

DT -> System: requestEditMaintenanceType()
activate System
System --> DT: requestMaintenanceTypeSelection()
deactivate System

DT -> System: selectMaintenanceType(identifier)
activate System
alt maintenance type exists
    System --> DT: requestUpdatedDetails()
    deactivate System
    DT -> System: provideUpdatedDetails(newName)
    activate System
    System -> System: validateNewName(newName)
    alt name is not unique
        System --> DT: errorMessage("Duplicate maintenance type name")
    else name is unique
        System -> System: updateMaintenanceType(newName)
        alt update failed
            System --> DT: errorMessage("Failed to update maintenance type")
        else update succeeded
            System --> DT: successMessage("Maintenance type updated successfully")
        end
    end
else maintenance type does not exist
    System --> DT: errorMessage("Maintenance type not found")
end
deactivate System

deactivate DT

@enduml