@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

title System Sequence Diagram (SSD) - Add Maintenance Type

autonumber

actor "Drone Tech" as DT
participant ":System" as System

activate DT

DT -> System: requestAddMaintenanceType()
activate System
System --> DT: requestMaintenanceTypeDetails()
deactivate System

DT -> System: provideMaintenanceTypeDetails(name)
activate System
System -> System: validateMaintenanceTypeName(name)
alt name is not unique
    System --> DT: errorMessage("Duplicate maintenance type name!")
    deactivate System
else name is unique
    System -> System: createMaintenanceType(name)
    System -> System: saveMaintenanceType()
    alt save failed
        System --> DT: errorMessage("Failed to save maintenance type!")
    else save succeeded
        System --> DT: successMessage("Maintenance type added successfully!")
    end
    deactivate System
end

deactivate DT

@enduml