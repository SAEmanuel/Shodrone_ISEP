@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

title System Sequence Diagram (SSD) - Add Video of Simulation to Proposal

autonumber

actor "CRM Collaborator" as CRM
participant ":System" as System

activate CRM

    CRM -> System: login()
    activate System
    System --> CRM: authenticated
    deactivate System

    CRM -> System: openProposal(proposalId)
    activate System
    System --> CRM: proposal data (status, metadata)
    deactivate System

    CRM -> System: uploadSimulationVideo(proposalId, videoFile)
    activate System

        System -> System: validateProposalIsEditable(proposalId)
        System -> System: uploadVideoToStorage(videoFile)
        System -> System: generateVideoUrl()
        System -> System: attachVideoToProposal(proposalId, videoUrl, uploadedBy, timestamp)

    System --> CRM: confirmation + videoUrl
    deactivate System

deactivate CRM
@enduml
