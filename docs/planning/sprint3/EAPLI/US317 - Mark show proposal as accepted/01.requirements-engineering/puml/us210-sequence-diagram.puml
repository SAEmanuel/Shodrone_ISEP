@startuml
skinparam monochrome true
skinparam packageStyle rectangle
skinparam shadowing false

title System Sequence Diagram (SSD) - US210 - Authenticate User

autonumber

actor "System User" as User
participant ":System" as System

activate User

    User -> System : login(email, password)
    activate System

        System -> System : validateCredentials(email, password)
        System -> System : retrieveUserByEmail(email)
        System -> System : verifyPassword(password)

        alt valid credentials
            System -> System : startUserSession(user)
            System --> User : session started successfully
        else invalid credentials
            System --> User : authentication error
        end

    deactivate System

deactivate User
@enduml
